fname = input ('Please enter the name of a file: ')
if len (fname)<1: fname = 'mbox-short.txt'
hand = open (fname)

di = dict()
for line in hand:
    line = line.rstrip()
    #print (line)
    wds = line.split()
    #print (wds)
    for w in wds:
        di [w] = di.get(w,0)+1
        #if w in di:
            #di[w] = di[w] + 1
        #else:
            #di [w] = 1

#print (di)

#find the most common word
largest = -1
theword = None
for k,v in di.items():
    #print (k,v)
    if v >largest:
        largest = v
        theword = k
print ('Done', theword,largest)
